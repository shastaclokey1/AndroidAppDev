<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clokey.shasta.motusapp.MainActivity">


    <LinearLayout
        android:id="@+id/action_bar_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:src="@drawable/vmuv_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/news"
            android:gravity="center"
            android:textColor="@color/vmuvBlue"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tracker_app"
            android:gravity="center"
            android:paddingRight="5dp"
            android:textColor="@color/vmuvBlue"/>

    </LinearLayout>

    <ImageView
        android:src="@drawable/motus_modular_wedge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar_layout"/>

    <ImageView
        android:src="@drawable/banner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:layout_below="@id/action_bar_layout"/>

</RelativeLayout>
